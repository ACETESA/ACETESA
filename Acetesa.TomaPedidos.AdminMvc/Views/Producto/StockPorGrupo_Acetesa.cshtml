@model Acetesa.TomaPedidos.AdminMvc.Models.StockPorGrupoViewModel
@{
    ViewBag.Title = "Stock Por Familia";
}
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<h3>Stock Por Familia - Acetesa</h3>

@using (Ajax.BeginForm(new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "OnBegin",
    OnComplete = "OnComplete",
    OnFailure = "OnFailure",
    UpdateTargetId = "result"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Empresa, htmlAttributes: new { @class = "control-label col-md-2", @style = "display: none" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Empresa, ViewBag.GetEmpresas as SelectList, new { @class = "form-control", @style = "display: none" })
                @Html.ValidationMessageFor(model => model.Empresa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tienda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tienda, ViewBag.GetTiendas as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tienda, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Familia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Familia, ViewBag.GetFamilias as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Familia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SubGrupo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SubGrupo, ViewBag.GetSubFamilias as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubGrupo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipo, ViewBag.GetTipos as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FechaInicio, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div id="result">
    @{Html.RenderPartial("_PartialStockPorGrupoList", Model); }
</div>

@section CssTop{
    @Styles.Render("~/Content/ui")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/lib/Ajax.js?v=1"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/lib/jquery.aCollapTable.js"></script>
    <script>
            _baseUrl = "@ViewBag.BaseUrl";
    </script>
    <script src="~/Scripts/app/StockPorGrupo.js?v=2"></script>
    <script src="~/Scripts/jquery.fileDownload.js?v=1"></script>



    <script type="text/javascript">

            var $Familia = $("#Familia");
            var $SubFamilia = $("#SubGrupo");
            $Familia.change(function () {
                var request = new Ajax("");
                var params = {
                    empresa: "acetesa",
                    codFamilia: $(this).val()
                };
                $SubFamilia.html("");
                request.JsonPost("GetSubFamilias", params, function (data) {
                    $.each(data, function (index, item) {
                        var html = "<option value='" + item.Value + "'>";
                        html += item.Text;
                        html += "</option>";
                        $SubFamilia.append(html);
                    });
                });
            });

    </script>
}