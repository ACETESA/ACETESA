@model Acetesa.TomaPedidos.AdminMvc.Models.ContactoEntregaDirectaNewViewModel
<div id="PopupGrillaContactoEntregaDirecta" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="titleModalListaContacto">Seleccionar Contacto de Entrega Directa</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblContactoEntregaDirecta" class="table table-striped table-bordered display table-hover"></table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnNuevoContactoEntregaDirecta">Nuevo</button>
                <button type="button" class="btn btn-default" id="btnCerrarContactoEntregaDirecta">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<form id="ContactoEntregaDirectaForm" novalidate>
    <div id="PopupNuevoContactoEntregaDirecta" class="modal fade" tabindex="-1" role="dialog" style="z-index:1050">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="titleModalRegistrarContacto">Nuevo Contacto de Entrega Directa</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label" for="Sucursal">Sucursal</label>
                        <select class="form-control sucursal-contactoentregadirecta" id="SucursalContactoEntregaDirecta" name="SucursalContactoEntregaDirecta"></select>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control nombres-contactoentregadirecta", @maxlength = "60" } })
                        @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CargoLaboral, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CargoLaboral, new { htmlAttributes = new { @class = "form-control cargolaboral-contactoentregadirecta", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.CargoLaboral, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-6" style="padding-left: 0px;">
                            @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control telefono-contactoentregadirecta", @maxlength = "20" } })
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6" style="padding-right: 0px;">
                            @Html.LabelFor(model => model.Telefono2, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Telefono2, new { htmlAttributes = new { @class = "form-control telefono2-contactoentregadirecta", @maxlength = "20" } })
                            @Html.ValidationMessageFor(model => model.Telefono2, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control email-contactoentregadirecta", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de contacto</label>
                        <label class="checkbox-inline">
                            @*<input type="radio" name="TipoContactoEntregaDirecta" id="TipoContacto1" value="1"> Cobranza*@
                            <input type="checkbox" id="ContCobranza" /> Cobranza
                        </label>
                        <label class="checkbox-inline">
                            @*<input type="radio" name="TipoContactoEntregaDirecta" id="TipoContacto2" value="2"> Entrega*@
                            <input type="checkbox" id="ContAlmacen" /> Almacen
                        </label>
                        <label class="checkbox-inline">
                            @*<input type="radio" name="TipoContactoEntregaDirecta" id="TipoContacto3" value="3"> Venta*@
                            <input type="checkbox" id="ContVenta" /> Venta
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Envío de documentos</label>
                        <label class="checkbox-inline">
                            <input type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento1" value="1"> Si
                        </label>
                        <label class="checkbox-inline">
                            <input type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento0" value="0"> No
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-default" id="btnGrabarContactoEntregaDirecta">Grabar</button>
                </div>
            </div>
        </div>
    </div>
</form>