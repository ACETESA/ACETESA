@model Acetesa.TomaPedidos.AdminMvc.Models.ContactoEntregaDirectaNewViewModel
<div class="modal fade" id="PopupGrillaContactoEntregaDirecta" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="titleModalListaContacto" class="modal-title">Contactos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table id="tblContactoEntregaDirecta" class="table table-striped table-bordered display table-hover"></table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btnNuevoContactoEntregaDirecta">Nuevo</button>
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal" id="btnCerrarContactoEntregaDirecta">Cerrar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="PopupNuevoContactoEntregaDirecta" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="ContactoEntregaDirectaForm" novalidate>
                    <div class="modal-header">
                        <h5 id="titleModalRegistrarContacto" class="modal-title">Nuevo Contacto de Entrega Directa</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 col-lg-6 mb-3">
                                <label class="form-label" for="Sucursal">Sucursal</label>
                                <select class="form-select sucursal-contactoentregadirecta" id="SucursalContactoEntregaDirecta" name="SucursalContactoEntregaDirecta"></select>
                            </div>
                            <div class="col-12 col-lg-6 mb-3">
                                @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control nombres-contactoentregadirecta", @maxlength = "60" } })
                                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-12 mb-3">
                                @Html.LabelFor(model => model.CargoLaboral, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.CargoLaboral, new { htmlAttributes = new { @class = "form-control cargolaboral-contactoentregadirecta", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.CargoLaboral, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-12 col-lg-3 mb-3">
                                @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control telefono-contactoentregadirecta", @maxlength = "20" } })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 col-lg-3 mb-3">
                                @Html.LabelFor(model => model.Telefono2, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Telefono2, new { htmlAttributes = new { @class = "form-control telefono2-contactoentregadirecta", @maxlength = "20" } })
                                @Html.ValidationMessageFor(model => model.Telefono2, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12 col-lg-6 mb-3">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control email-contactoentregadirecta", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>


                            <div class="mb-3">
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="ContCobranza" />
                                    <label for="ContCobranza" class="form-check-label">Contacto de Cobranza</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="ContAlmacen" />
                                    <label for="ContAlmacen" class="form-check-label">Contacto de Almacén</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="ContVenta" />
                                    <label for="ContVenta" class="form-check-label">Contacto de Venta</label>
                                </div>
                            </div>


                            <div class="mb-3">
                                <div class="form-check  form-check-inline">
                                    <input class="form-check-input" type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento1" value="1">
                                    <label class="form-check-label" for="EnvioDocumento1">
                                        Enviar Documentos
                                    </label>
                                </div>
                                <div class="form-check  form-check-inline">
                                    <input class="form-check-input" type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento0" value="0">
                                    <label class="form-check-label" for="EnvioDocumento0">
                                        No Enviar Documentos
                                    </label>
                                </div>
                            </div>



                            @*<div class="form-group">
                                <label class="control-label">Envío de documentos</label>
                                <label class="checkbox-inline">
                                    <input type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento1" value="1"> Si
                                </label>
                                <label class="checkbox-inline">
                                    <input type="radio" name="EnvioDocumentoContactoEntregaDirecta" id="EnvioDocumento0" value="0"> No
                                </label>
                            </div>*@
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-success" id="btnGrabarContactoEntregaDirecta">Grabar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
