@model Acetesa.TomaPedidos.AdminMvc.Models.EnviarMailViewModel
<form id="enviarMailForm" novalidate>
    <div class="modal fade" id="modal-send-mail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">Nuevo mensaje</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Asunto, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Asunto, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Para, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Para, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConCopia, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.ConCopia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConCopia, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mensaje, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Mensaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mensaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btnCloseModal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btnSendMailModal">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</form>