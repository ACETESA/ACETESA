@model Acetesa.TomaPedidos.AdminMvc.Models.LugarEntregaNewViewModel

<div id="PopupGrillaLugarEntrega" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Seleccionar Lugar de Entrega</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblLugarEntrega" class="table table-striped table-bordered display table-hover"></table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnNuevoLugarEntrega">Nuevo</button>
                <button type="button" class="btn btn-default" id="btnCerrarLugarEntrega">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<form id="LugarEntregaForm" novalidate>
    <div id="PopupNuevoLugarEntrega" class="modal fade" tabindex="-1" role="dialog" style="z-index:1050">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Nuevo Lugar de Entrega</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                            @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control direccion-lugarentrega", @maxlength = "60" } })
                            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-6" style="padding-left: 0px;">
                            <label class="control-label">Entrega</label>
                            <label class="checkbox-inline">
                                <input type="radio" name="EntregaLugarEntrega" id="Entrega1" value="1"> Si
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="EntregaLugarEntrega" id="Entrega0" value="0"> No
                            </label>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Cobranza</label>
                            <label class="checkbox-inline">
                                <input type="radio" name="CobranzaLugarEntrega" id="Cobranza1" value="1"> Si
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="CobranzaLugarEntrega" id="Cobranza0" value="0"> No
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Departamento">Departamento</label>
                        <select class="form-control departamento-lugarentrega" id="DepartamentoLugarEntrega" name="DepartamentoLugarEntrega"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Provincia">Provincia</label>
                        <select class="form-control provincia-lugarentrega" id="ProvinciaLugarEntrega" name="ProvinciaLugarEntrega"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Distrito">Distrito</label>
                        <select class="form-control distrito-lugarentrega" id="DistritoLugarEntrega" name="DistritoLugarEntrega"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Zona">Zona</label>
                        <select class="form-control zona-lugarentrega" id="ZonaLugarEntrega" name="ZonaLugarEntrega"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-default" id="btnGrabarLugarEntrega">Grabar</button>
                </div>
            </div>
        </div>
    </div>
</form>